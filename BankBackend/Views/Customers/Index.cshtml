@model BankBackend.Models.Customer;
@{
	ViewData["Title"] = "View Customers";

	// gets list of customer objects sent by the controller
	List<Customer> customers = TempData["customers"] as List<Customer>;
}

<div class="container">
	@if(customers != null) {
		<div class="row">
			<div class="col-md-12">
				
				<div class="d-flex align-items-center justify-content-between">
					<h1 class="py-3">Customers</h1>
					
				
					<!-- Search bar -->										
					<form class="d-flex" style="height: 50%" action="/Customers/Search" method="post">
						<input class="form-control me-1" type="search" placeholder="Search" name="searchTerm">
						<button class="btn btn-primary" type="submit">Search</button>
					</form>
					

				</div>
				
				<table class="table table-striped">
					<thead>
						<tr>						
							<th>First Name</th>
							<th>Last Name</th>
							<th>Actions</th>						
						</tr>
					</thead>
					<tbody>
						@foreach (Customer customer in customers)
						{
							<tr>							
								<td>@customer.FirstName</td>	
								<td>@customer.LastName</td>
								<td class="d-flex justify-content-between">
									<!-- View details button -->
									<form asp-action="Details" asp-controller="Customers" method="post">
										<input type="hidden" asp-for="Id" value="@customer.Id">
										<button type="submit" class="btn btn-warning">Details</button>
									</form>	

									<!-- Details button -->
									<form asp-action="Edit" asp-controller="Customers" method="post">
										<input type="hidden" asp-for="Id" value="@customer.Id">
										<button type="submit" class="btn btn-primary">Edit</button>
									</form>

									<!-- Delete user button -->
									<form asp-action="Delete" asp-controller="Customers" method="post">
										<input type="hidden" asp-for="Id" value="@customer.Id">
										<button type="submit" class="btn btn-danger">Delete</button>
									</form>

								</td>							
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	}
</div>
