@model BankBackend.Models.Customer;


@{
	ViewData["Title"] = "Customer Details";

	Customer customer = TempData["customerTemp"] as Customer;
}

<h1>Customer Details</h1>

<form action="/Customers/UpdateDetails" method="post">
	<input type="hidden" asp-for="Id" value="@customer.Id"/>
	<div class="form-group col-md-6 col-12">
		<label for="firstName">First Name</label>
		<input type="text" class="form-control" id="firstName" placeholder="First Name" asp-for="FirstName" value="@customer.FirstName">
	</div>
	<div class="form-group col-md-6 col-12">
		<label for="lastName">Last Name</label>
		<input type="text" class="form-control" id="lastName" placeholder="Last Name" asp-for="LastName" value="@customer.LastName">
	</div>
	<div class="form-group col-md-6 col-12">
		<label for="address">Address</label>
		<input type="text" class="form-control" id="address" placeholder="Address" asp-for="Address" value="@customer.Address">
	</div>
	<div class="form-group col-md-6 col-12">
		<label for="age">Age</label>
		<input type="text" class="form-control" id="age" placeholder="Age" asp-for="Age" value="@customer.Age">
	</div>
	<div class="form-group col-md-6 col-12">
		<label for="salary">Salary</label>
		<input type="text" class="form-control" id="salary" placeholder="Salary" asp-for="Salary" value="@customer.Salary">
	</div>
	<button type="submit" class="btn btn-primary col-lg-3 col-12 my-3 py-3">Submit</button>
</form>


