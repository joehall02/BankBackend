
@{
	ViewData["Title"] = "Transactions";
	List<Transaction> transactions = TempData["transactions"] as List<Transaction>;
	Customer customer = TempData["customer"] as Customer;

}

<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="d-flex align-items-center justify-content-between">
					<h1 class="py-3">@customer.FirstName's Transactions</h1>
				</div>
				@if (transactions.Count > 0)
				{
				<table class="table table-striped">
					<thead>
						<tr>			
							<th>Customer Name</th>
							<th>Amount</th>
							<th>Transaction Type</th>							
						</tr>
					</thead>
					<tbody>
						@foreach (Transaction transaction in transactions)
						{
							<tr>							
								<td>@(customer.FirstName + " " + customer.LastName)</td>
								<td>£@transaction.Amount</td>
								<td>@transaction.Type</td>											
							</tr>
						}
					</tbody>
				</table>
				} else
				{
					<h2>This account has no transactions</h2>
				}	

				<form asp-action="Index" asp-controller="Customers" method="post">
					<button type="submit" class="btn btn-danger col-lg-3 col-12 my-3 py-3">Go Back</button>
				</form>
			</div>
		</div>
